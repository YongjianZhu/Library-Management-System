<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">University</th>
      <th scope="col">Location</th>
      <th scope="col">Max borrowed days</th>
      <th scope="col">Overdue fines</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= University.find(library.university_id).name %></td>
        <td><%= library.location %></td>
        <td><%= library.max_borrowed_days %></td>
        <td><%= library.overdue_fines %></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library', new_library_path, class:"btn btn-light" %>
